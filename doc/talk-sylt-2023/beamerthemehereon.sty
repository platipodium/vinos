\selectcolormodel{cmyk}

%% Definition der corporate color
\definecolor{hzgbluelight}{cmyk}{.85,.19,0,0}
\definecolor{hzgblue}{cmyk}{1.0,.50,0,.18}
\definecolor{hzgbluedark}{cmyk}{1.0,0.5,0,0.43}
\definecolor{hzgbeige}{cmyk}{0,0,.3,.18}
\definecolor{hzggrauverylight}{cmyk}{0.1,0,0,0.3}
\definecolor{hzggraui}{cmyk}{0.1,0,0,0.4}
\definecolor{hzggrauii}{cmyk}{0.23,0,0,0.63}
\definecolor{hzggrauiii}{cmyk}{0.35,0,0,0.94}
\definecolor{hzgrot}{cmyk}{0,.95,1,0}
\definecolor{hzgorange}{cmyk}{0,.55,1,0.02}
\definecolor{hzggelb}{cmyk}{0,.30,1,0}
\definecolor{hzghellgruen}{cmyk}{.23,0,1,0.17}
\definecolor{hzghalbschwarz}{cmyk}{0,0,0,.5}
\definecolor{hzgblack}{cmyk}{0,0,0,1}

\definecolor{hzgcolorscheme1}{cmyk}{0,.95,1,0} % e.g. for alert
\definecolor{hzgcolorblockbg}{cmyk}{.85,.19,0,0} % for block title background
\definecolor{hzgcolorblockfg}{cmyk}{.23,0,1,0.17} % block title text
\definecolor{hzgcolorscheme2}{cmyk}{0,0,0,.5}  % e.g. title in headline
\definecolor{hzgcolorscheme3}{cmyk}{0,0,.3,.18}  % for poster background
\definecolor{hzgcolorschemeHeadline}{cmyk}{.23,0,1,0.17} % for headline background

\mode<presentation>

% headline colors and fonts
\setbeamercolor{headline}{fg=black,bg=white}
\setbeamercolor{title in headline}{fg=hzgblack}
\setbeamerfont{title in headline}{size=\huge,series=\bfseries}

\setbeamercolor{author in headline}{fg=hzgblack}
\setbeamerfont{author in headline}{series=\bfseries}

\setbeamercolor{institute in headline}{fg=hzgblack}
\setbeamercolor{logo in headline}{fg=black,bg=white}
\setbeamercolor{separation line}{bg=white,fg=hzgbluelight}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=hzggrauverylight}
\setbeamerfont{footline}{size=\normalsize}

% body colors and fonts
\setbeamercolor*{normal text}{fg=black,bg=white}

% block environment
\setbeamercolor*{block body}{fg=black}
\setbeamercolor*{block title}{fg=hzgbluelight}
\setbeamerfont{block title}{size=\Large,series=\bfseries}

% example environment
\setbeamercolor*{example title}{fg=white,bg=hzgcolorscheme1}
\setbeamerfont{example title}{size=\large,series=\bf}

\setbeamercolor{alerted text}{fg=hzgrot}
\setbeamercolor{structure}{fg=hzgbluelight}

%\setbeamertemplate{itemize item}{$\rightarrow$}
\setbeamertemplate{itemize item}{\ding{212}}
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

