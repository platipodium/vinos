%------------------------------------------------------------------------
% Presentation setup and styles
%----------------------------------------------------------------------
\newif\ifblack
\blackfalse
%\blacktrue % Enable if you want dark layout

\setmainfont{Poppins}
\setromanfont{Poppins}
\setsansfont{Poppins-Medium}

%% Prepare title
\ifblack\pgfdeclareimage[height=8mm]{hereonlogo}{figures/hereon_logo_mit_zusatz_neg.pdf}\else\pgfdeclareimage[height=8mm]{hereonlogo}{figures/logo_hereon_rgb_full_en.pdf}\fi
\pgfdeclareimage[width=\textwidth]{hereonback}{figures/bg_hereon.png}

\mode<presentation>
{
  \setbeamersize{text margin left=5mm,text margin right=5mm}
  \ifblack\usetheme{lankton-keynote}\fi
  \useoutertheme[width=0cm,height=16mm]{sidebar}

  \setbeamercovered{transparent}
  \beamerdefaultoverlayspecification{<+-| alert@+>}
  \setbeamertemplate{navigation symbols}[vertical]{}
  \defbeamertemplate{itemize item}{double arrow}{$\Rightarrow$}
  \defbeamertemplate{itemize item}{arrow}{$\rightarrow$}
  \setbeamertemplate{itemize item}[arrow]
  \setbeamercolor{itemize item}{fg=hereonbluelight}
}

\selectcolormodel{cmyk}


% Definition der corporate color
\definecolor{hereonbluelight}{cmyk}{.85,.19,0,0}
\definecolor{hereonblue}{cmyk}{1.0,.50,0,.18}
\definecolor{hereonbluedark}{cmyk}{1.0,0.5,0,0.43}
\definecolor{hereonbeige}{cmyk}{0,0,.3,.18}
\definecolor{hereongraui}{cmyk}{0.1,0,0,0.4}
\definecolor{hereongrauii}{cmyk}{0.23,0,0,0.63}
\definecolor{hereongrauiii}{cmyk}{0.35,0,0,0.94}
\definecolor{hereonrot}{cmyk}{0,.95,1,0}
\definecolor{hereonorange}{cmyk}{0,.55,1,0.02}
\definecolor{hereongelb}{cmyk}{0,.30,1,0}
\definecolor{hereonhellgruen}{cmyk}{.23,0,1,0.17}
\definecolor{hereonhalbschwarz}{cmyk}{0,0,0,.5}
\definecolor{hereonblack}{cmyk}{0,0,0,1}

\setbeamertemplate{headline}{%
\begin{beamercolorbox}{headline}
\inserttitle
%\vskip4pt\hfill\pgfuseimage{hereonlogo}\hskip4pt\vskip4pt
\end{beamercolorbox}
\begin{beamercolorbox}{headline}%
\color{hereonbluelight}\rule{5mm}{1pt}%
\color{hereonbluelight}\rule[-2.5pt]{80mm}{5pt}%
\color{hereonbluelight}\rule{60mm}{1pt}%
\vskip2mm
\end{beamercolorbox}
}

\setbeamertemplate{footline}{
\begin{beamercolorbox}{footline}
\hskip5mm\tiny\color{hereongraui}
\insertshortdate, \insertshortauthor: \insertshorttitle
\hfill\insertframenumber/\inserttotalframenumber\hspace*{2mm}
\end{beamercolorbox}
\color{hereonbluelight}\rule{140mm}{1pt}\vskip2mm
}
