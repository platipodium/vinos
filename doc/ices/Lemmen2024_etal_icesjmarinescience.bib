journal = {Marine Ecology Progress Series},
keywords = {Acoustic communication,Bottlenose dolphins,Masking,Pilot whales,Recreational vessels,Vessel noise,Whale watching},
number = {Ross 1976},
pages = {161--175},
title = {{Vessel noise effects on delphinid communication}},
volume = {395},
