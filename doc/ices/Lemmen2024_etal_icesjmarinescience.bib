issn = {22967745},
journal = {Frontiers in Marine Science},
keywords = {Eastern Tuna and Billfish Fishery,behavior,fisheries management,fishing fleets,fishing styles,fishing tactics},
pages = {552391},
publisher = {Frontiers Media SA},
title = {{A Robust M{\'{e}}tier-Based Approach to Classifying Fishing Practices Within Commercial Fisheries}},
volume = {7},
year = {2020}
}
