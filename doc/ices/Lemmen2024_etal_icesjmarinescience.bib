journal = {Frontiers in Marine Science},
keywords = {Adriatic sea,coastal urban ecosystems,early diagenesis,hypoxia,shallow water,sulfide},
number = {January},
pages = {1--15},
title = {{Early Diagenesis in Sediments of the Venice Lagoon (Italy) and Its Relationship to Hypoxia}},
