journal = {Aquatic Toxicology},
keywords = {Arsenic,Fundulus heteroclitus,Osmotic stress,microRNA},
number = {603},
pages = {142--153},
pmid = {30476744},
title = {{Profiling microRNA expression in Atlantic killifish (Fundulus heteroclitus) gill and responses to arsenic and hyperosmotic stress}},
