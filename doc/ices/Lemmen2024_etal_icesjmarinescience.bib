pages = {102173},
publisher = {Elsevier B.V.},
title = {{Connectivity of local sub-stocks of Crangon crangon in the North Sea and the risk of local recruitment overfishing}},
url = {https://doi.org/10.1016/j.seares.2022.102173},
volume = {181},
