keywords = {Coupling of fishing logbook,Danish marine fisheries,Energy efficiency,Fishing behaviour,Fishing effort allocation,Fleet dynamics,Fuel consumption,Individual-based-model (IBM),Profitability,Sales slips and VMS data,Satellite vessel tracking (VMS)},
month = {dec},
number = {3},
pages = {501--516},
publisher = {Elsevier},
title = {{Effects of fishing effort allocation scenarios on energy efficiency and profitability: An individual-based model applied to Danish fisheries}},
volume = {106},
